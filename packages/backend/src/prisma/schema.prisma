// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 商户（租户）模型
model Merchant {
  id        Int        @id @default(autoincrement())
  name      String // 商户名称
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  menuItems MenuItem[]
  tables    Table[]
  orders    Order[]
}

// 餐桌模型
model Table {
  id         Int      @id @default(autoincrement())
  name       String // 桌号，如 "A1", "吧台座-3"
  merchantId Int
  merchant   Merchant @relation(fields: [merchantId], references: [id])
  orders     Order[]

  @@unique([merchantId, name]) // 同一个商户下的桌号不能重复
}

// 菜单项模型
model MenuItem {
  id             Int             @id @default(autoincrement())
  name           String // 菜品名称
  price          Float // 现价
  originalPrice  Float?          // 原价
  description    String?
  imageUrl       String? // 商品图片链接
  isAvailable    Boolean         @default(true) // 是否在售
  merchantId     Int
  merchant       Merchant        @relation(fields: [merchantId], references: [id])
  orderItems     OrderItem[]
  specifications Specification[]
}

// 商品规格模型 (如: 辣度, 尺寸)
model Specification {
  id         Int      @id @default(autoincrement())
  name       String // e.g., "辣度"
  menuItemId Int
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  options    Option[]
}

// 规格选项模型 (如: 不辣, 微辣, 大份, 小份)
model Option {
  id              Int           @id @default(autoincrement())
  name            String // e.g., "微辣"
  price           Float // 价格调整 (可以是 0, 正数或负数)
  specificationId Int
  specification   Specification @relation(fields: [specificationId], references: [id], onDelete: Cascade)
}


// 订单状态枚举
enum OrderStatus {
  AWAITING_PAYMENT // 待支付
  RECEIVED // 已接单 (已支付，等待商家处理)
  PREPARING // 制作中
  COMPLETED // 已完成
  CANCELLED // 已取消
}

// 订单模型
model Order {
  id         Int         @id @default(autoincrement())
  totalPrice Float
  status     OrderStatus @default(AWAITING_PAYMENT) // 默认状态改为待支付
  createdAt  DateTime    @default(now())
  merchantId Int
  merchant   Merchant    @relation(fields: [merchantId], references: [id])
  tableId    Int
  table      Table       @relation(fields: [tableId], references: [id])
  items      OrderItem[]

  assigneeId   Int? // 领取订单的员工ID
  assigneeName String? // 领取订单的员工姓名

  claimCode    String? // 从第三方平台同步的取餐码
  qrCodeData   String? // 从第三方平台同步的二维码数据

  storeName    String
  storeAddress String
}

// 订单项模型（连接订单和菜单项）
model OrderItem {
  id                     Int      @id @default(autoincrement())
  quantity               Int
  orderId                Int
  order                  Order    @relation(fields: [orderId], references: [id])
  menuItemId             Int
  menuItem               MenuItem @relation(fields: [menuItemId], references: [id])
  selectedSpecifications Json? // 存储所选规格, e.g., [{"name": "辣度", "option": "微辣"}]

  @@unique([orderId, menuItemId])
}
