{
  "name": "payer-restaurant-saas-monorepo",
  "private": true,
  "description": "Payer Restaurant SaaS Monorepo",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=customer-app",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=customer-app"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}